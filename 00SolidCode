                <td><select id="medioPago2"></select></td>
                <td><input type="number" id="precioUnitario2" step="any" min="0.01" oninput="calcularTotal(2)"></td>
                <td><input type="number" id="cantidad2" step="any" min="0.01" value="1" oninput="calcularTotal(2)"></td>
                <td><input type="text" id="total2" readonly></td>
                <td style="text-align: center;">
                  <button type="button" class="btn-eliminar-fila" onclick="eliminarFila(2)">üóëÔ∏è</button>
                </td>
              </tr>
              
              <tr class="fila-venta" data-id="3">
                <td class="num-fila">3</td>
                <td><select id="categoria3"></select></td>
                <td><input type="text" id="producto3"></td>
                <td><select id="medioPago3"></select></td>
                <td><input type="number" id="precioUnitario3" step="any" min="0.01" oninput="calcularTotal(3)"></td>
                <td><input type="number" id="cantidad3" step="any" min="0.01" value="1" oninput="calcularTotal(3)"></td>
                <td><input type="text" id="total3" readonly></td>
                <td style="text-align: center;">
                  <button type="button" class="btn-eliminar-fila" onclick="eliminarFila(3)">üóëÔ∏è</button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="botones-filas">
          <button type="button" class="btn-fila btn-agregar" onclick="agregarFila()">+ Agregar otra venta</button>
        </div>

        <div class="resumen-total">
          <div class="label">TOTAL GENERAL:</div>
          <div class="monto" id="totalGeneral">S/ 0.00</div>

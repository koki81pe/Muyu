    <div class="container">
      <h2>Registro de Ventas</h2>

      <label for="categoria">Categor√≠a:</label>
      <select id="categoria"></select>

      <label for="producto">Producto:</label>
      <input type="text" id="producto" placeholder="Nombre del producto">

      <label for="modoPago">Modo de Pago:</label>
      <select id="modoPago"></select>

      <label for="precio">Precio Unitario (S/):</label>
      <input type="number" id="precio" step="0.01" min="0">

      <label for="cantidad">Cantidad:</label>
      <input type="number" id="cantidad" min="1">

      <label for="total">Total (S/):</label>
      <input type="text" id="total" readonly>

      <button onclick="registrarVenta()">Registrar venta</button>

      <p id="mensaje"></p>
    </div>

    <script>
      // OBTENER URL BASE
      const baseUrl = window.location.href.split('?')[0];

      // CARGAR DESPLEGABLES
      google.script.run.withSuccessHandler(cargarCategorias).getCategorias();
      google.script.run.withSuccessHandler(cargarModosPago).getModosPago();

      function cargarCategorias(data) {
        const select = document.getElementById("categoria");
        data.forEach(cat => {
          const option = document.createElement("option");
          option.value = cat;
          option.textContent = cat;
          select.appendChild(option);
        });
      }

      function cargarModosPago(data) {
        const select = document.getElementById("modoPago");
        data.forEach(mp => {
          const option = document.createElement("option");
          option.value = mp;
          option.textContent = mp;
          select.appendChild(option);
        });
      }

      // CALCULAR TOTAL EN TIEMPO REAL
      document.getElementById("precio").addEventListener("input", calcularTotal);
      document.getElementById("cantidad").addEventListener("input", calcularTotal);

      function calcularTotal() {
        const precio = parseFloat(document.getElementById("precio").value) || 0;
        const cantidad = parseFloat(document.getElementById("cantidad").value) || 0;
        document.getElementById("total").value = (precio * cantidad).toFixed(2);
      }

      // REGISTRAR VENTA (ENV√çO INSTANT√ÅNEO)
      function registrarVenta() {
        const data = {
          categoria: document.getElementById("categoria").value,
          producto: document.getElementById("producto").value,
          modoPago: document.getElementById("modoPago").value,
          precio: document.getElementById("precio").value,
          cantidad: document.getElementById("cantidad").value
        };

        // Mostrar mensaje inmediato
        const msg = document.getElementById("mensaje");
        msg.textContent = "Registro enviado";
        msg.style.display = "block";
        msg.style.color = "green";

        // Enviar al servidor sin esperar confirmaci√≥n
        google.script.run.registrarVenta(data);

        // Limpiar formulario
        document.getElementById("producto").value = "";
        document.getElementById("precio").value = "";
        document.getElementById("cantidad").value = "";
        document.getElementById("total").value = "";

        // Ocultar mensaje tras 10 segundos
        setTimeout(() => msg.style.display = "none", 10000);
      }
    </script>
  </body>
</html>


